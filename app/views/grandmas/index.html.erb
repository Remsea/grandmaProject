<%= render "pages/navbar" %>
<h1 style="text-align: center; margin-bottom: 30px; margin-top: 30px;">Our Grandmas are waiting for you !</h1>
<div class="main-container">
  <div class="cards">
    <% @grandmas.each do |grandma|%>
      <div class="card">
        <div class="additional">
          <div class="user-card">
            <div class="points center">
             <%= grandma.age %> ans
            </div>
            <div class="card-product">
            <%= link_to '', grandma_path(grandma)  %>
            <%= image_tag grandma.photo.url(:thumnail), class: 'avatar' %>
            </div>
          </div>
          <div class="more-info">
            <h1><%= grandma.name %></h1>
            <div class="coords">
            </div>
            <div class="stats">
              <div>
                <i class="fa fa-group"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="general">
          <h1><%= grandma.name %></h1>
          <p>Competence : <%= grandma.competence.to_s %></p>
          <p>Price :  <%= grandma.price %>0 â‚¬ /jours</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="map-container">
    <div
    id="map"
    style="width: 100%;
    height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
